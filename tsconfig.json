{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["./types"],
    "paths": {
      "@/features-adhkar/*": ["./src/features/adhkar/*"],
      "@/features-home/*": ["./src/features/home/*"],
      "@/features-onboarding/*": ["./src/features/onboarding/*"],
      "@/features-solah/*": ["./src/features/solah/*"],
      "@/app/*": ["./src/app/*"],
      "@/screens/*": ["./src/screens/*"],
      "@/features/*": ["./src/features/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "eslint.config.ts"
  ]
}
